<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/light</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:fontFamily">@font/oswald_regular</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light</item>
        <item name="colorPrimaryDark">@color/light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/light</item>
        <item name="colorAccent">@color/light</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:fontFamily">@font/oswald_regular</item>
    </style>



    <style name="sliderTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/light</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:fontFamily">@font/oswald_regular</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/light</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:fontFamily">@font/oswald_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/light</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/light</item>
        <item name="windowActionBar">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
